@model SalesStatistics.Models.Sale
<div class="panel panel-default">
    <div class="panel-heading">Edit sale</div>
    <div class="panel-body">
        @using (Html.BeginForm("EditSale", "Sales"))
        {
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                <label>Date:</label>
                @Html.TextBoxFor(model => model.Date, new { @class = "form-control", @Value = Model.Date.ToString("yyyy-MM-dd"), type = "date" })
            </div>
            <div class="form-group">
                <label>Manager:</label>
                @Html.DropDownListFor(model => model.Manager.Id, (IEnumerable<SelectListItem>)ViewBag.Managers, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Product:</label>
                @Html.DropDownListFor(model => model.Product.Id, (IEnumerable<SelectListItem>)ViewBag.Products, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Client:</label>
                @Html.DropDownListFor(model => model.Client.Id, (IEnumerable<SelectListItem>)ViewBag.Clients, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Sum:</label>
                @Html.TextBoxFor(model => model.Sum, new { @class = "form-control" })
            </div>
            <input class="btn btn-default" type="submit" value="Edit">
        }
        <br/>
        <button class="btn btn-default" id="cancel">Cancel</button>
    </div>
</div>

<script>
    $("#cancel").click(function () {
        $("#divEditSale").hide();
        $("#btn-group").show();
        $("#grid").show();
    });
</script>
