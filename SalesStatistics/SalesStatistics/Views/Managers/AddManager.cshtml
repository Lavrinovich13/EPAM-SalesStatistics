@model SalesStatistics.Models.Manager
<div class="panel panel-default">
    <div class="panel-heading">Add manager</div>
    <div class="panel-body">
        @using(Html.BeginForm("AddManager", "Managers"))
        { 
        <div class="form-group">
            <label>Manager:</label>
            @Html.EditorFor(model => model.LastName, new { @class = "form-control" })
        </div>
            <input id="addManager" type="submit" value="Add">
        }
        <button id="cancel">Cancel</button>
    </div>
</div>

<script>
    $("#cancel").click(function () {
        $("#divAddManager").hide();
        $("#btn-group").show();
        $("#grid").show();
    });
</script>


