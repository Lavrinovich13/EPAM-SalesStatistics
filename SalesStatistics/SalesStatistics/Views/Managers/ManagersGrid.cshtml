@using GridMvc.Html
@using GridMvc.Sorting
@model IEnumerable<SalesStatistics.Models.Manager>


@Html.Grid(Model).Named("grid").Columns(columns =>
    {
        columns.Add(c => c.LastName).Titled("Last name").Filterable(true);
        if (User.IsInRole("Admin"))
        {
            columns.Add()
                          .Encoded(false)
                          .Sanitized(false)
                          .SetWidth(100)
                          .Titled("Actions")
                          .Sortable(false)
                          .RenderValueAs(o => CustomRenderingOfColumn(o));
        }

    }).Sortable(true).WithPaging(8)

@helper CustomRenderingOfColumn(SalesStatistics.Models.Manager order)
{
    <a href="#" type="button" onclick="edit(@order.Id)">Edit</a>
    @Html.ActionLink("Remove", "RemoveManager", "Managers", new { id = order.Id }, null)
}

<script type="text/javascript">
    function edit(id) {
        var url = "/Managers/EditManager";
        $.get(url, {id:id}, function (data) {
            $("#divEdit").html(data);
            $("#divEdit").show();
            $("#divAdd").hide();
            $("#grid").hide();
        });
    }
</script>