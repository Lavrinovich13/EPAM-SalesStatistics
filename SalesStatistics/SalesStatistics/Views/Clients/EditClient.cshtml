@{
    ViewBag.Title = "EditManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SalesStatistics.Models.Client
<h2>EditManager</h2>

<div class="panel panel-default">
    <div class="panel-heading">Edit client</div>
    <div class="panel-body">
        @using (Html.BeginForm("EditClient", "Clients"))
        {
            <div class="form-group">
                <label>First name:</label>
                @Html.EditorFor(model => model.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Last name:</label>
                @Html.EditorFor(model => model.LastName, new { @class = "form-control" })
            </div>
            <input type="submit" value="Edit">
        }
        <button id="cancel">Cancel</button>
    </div>
</div>

